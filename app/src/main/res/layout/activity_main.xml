<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:background="@color/background_color">
    <ImageButton
        android:id="@+id/btn_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:background="@color/transparent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_setting"
        android:layout_marginTop="30dp"
        android:text="Setting"
        />
    <LinearLayout
        android:id="@+id/layout_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_setting">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_mic"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_bar"
        android:layout_below="@+id/layout_wave"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <com.app.yombovoice.common.DonutProgress
            android:layout_marginLeft="50dp"
            android:id="@+id/donut_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            custom:donut_unfinished_stroke_width="10dp"
            custom:donut_finished_stroke_width="10dp"
            custom:donut_progress="87"
            custom:donut_circle_starting_degree="-90"
            custom:donut_finished_color="@color/progress_finish_color"
            custom:donut_unfinished_color="@color/white"
            custom:donut_inner_bottom_text_color="#214193"
            custom:donut_text_color="@color/white"
            custom:donut_suffix_text=""
            custom:donut_text_size="45dp"
            custom:donut_text=""
            />

        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Button"
            android:src="@drawable/icon_mic"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            >
            </ImageButton>
    </RelativeLayout>

<LinearLayout
    android:id="@+id/btn_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:layout_marginBottom="20dp">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_tab_not_selected_1"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:background="@color/transparent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:text="1"/>
    <ImageButton
        android:id="@+id/btn_screen2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_tab_selected_2"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:background="@color/transparent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:text="2"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_tab_selected_3"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:background="@color/transparent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:text="3"/>
</LinearLayout>
</RelativeLayout>